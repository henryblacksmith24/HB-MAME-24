<theme>
<formatVersion>4</formatVersion>
<feature supported="carousel">
	<view name="system">
		<image name="background" extra="true">
			<tile>false</tile>
			<path>./_dades/fons/fons.png</path>
			<size>1 1</size>
			<pos>0 0</pos>
		</image>		
		<image name="logo">
			<path>./_dades/logos/${system.theme}.png</path>
			<origin>0.5 0.5</origin>
		</image>						
		<carousel name="systemcarousel">
			<type>horizontal</type>
			<color>00000000</color>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<size>0.468 0.2</size> 
			<logoScale>1</logoScale>
			<logoSize>0.468 0.18</logoSize>
			<maxLogoCount>1</maxLogoCount>
		</carousel>
		<text name="systemInfo">
			<fontPath>./_dades/lletra/mask.ttf</fontPath>
			<alignment>center</alignment>
			<backgroundColor>00000000</backgroundColor>
			<color>ffffff</color>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.63</pos>
			<size>0.980 0.050</size>
			<fontSize>0.04</fontSize>
		</text>
		<helpsystem name="help">
			<fontPath>./_dades/lletra/mask.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<pos>0.05 0.975</pos>
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
		</helpsystem>
	</view>
</feature>
<view name="basic, detailed, video, grid">
	<image name="background" extra="true">
		<tile>false</tile>
		<path>./_dades/fons/fons_jocs.png</path>
		<size>1 1</size>
		<pos>0 0</pos>
	</image>
	<image name="logo">
		<path>./_dades/logos/${system.theme}.png</path>
		<origin>0.5 0.5</origin>
		<pos>0.296 0.1</pos>
		<maxSize>0.25 0.1</maxSize>
	</image>
	<textlist name="gamelist">
		<selectorColor>ffffff</selectorColor>
		<selectorImagePath>./_dades/seleccio/selector.png</selectorImagePath>
		<selectedColor>78c7ef</selectedColor>
		<selectorHeight>.035</selectorHeight>
		<primaryColor>ffffff</primaryColor>
		<secondaryColor>eac428</secondaryColor>
		<fontPath>./_dades/lletra/mask.ttf</fontPath>
		<alignment>left</alignment>
		<forceUppercase>1</forceUppercase>
		<pos>0.608 0.07</pos>
		<size>0.34 0.82</size>
		<fontSize>0.03</fontSize>
		<lineSpacing>1</lineSpacing>
		<horizontalMargin>0.01</horizontalMargin>
	</textlist>
	<helpsystem name="help">
		<fontPath>./_dades/lletra/mask.ttf</fontPath>
		<fontSize>0.025</fontSize>
		<pos>0.05 0.975</pos>
		<textColor>ffffff</textColor>
		<iconColor>ffffff</iconColor>
	</helpsystem>
	<text name="md_lbl_rating, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_releasedate, md_lbl_genre, md_lbl_developer, md_genre, md_developer, md_lbl_players, md_players">
		<color>ffffff</color>
		<forceUppercase>0</forceUppercase>
		<fontPath>./_dades/lletra/mask.ttf</fontPath>
		<fontSize>0.023</fontSize>
	</text>	
	<datetime name="md_lastplayed, md_releasedate">
		<color>ffffff</color>
		<forceUppercase>0</forceUppercase>
		<fontPath>./_dades/lletra/mask.ttf</fontPath>
		<fontSize>0.023</fontSize>
	</datetime>
	<text name="md_lbl_rating, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount">
		<pos>1 1</pos>
	</text>
	<datetime name="md_lastplayed">
		<pos>1 1</pos>
	</datetime>
	<rating name="md_rating">
		<pos>1 1</pos>
	</rating>
	<text name="md_lbl_releasedate">
		<pos>0.07 0.64</pos>
		<size>0 0.033</size>
	</text>
	<datetime name="md_releasedate">
		<pos>0.18 0.635</pos>
		<size>0 0.033</size>
	</datetime>
	<text name="md_lbl_genre">
		<pos>0.07 0.67</pos>
		<size>0 0.033</size>
	</text>
	<text name="md_genre">
		<pos>0.18 0.67</pos>
		<size>0 0.033</size>
	</text>
	<text name="md_lbl_developer">
		<pos>0.07 0.7</pos>
		<size>0 0.033</size>
	</text>
	<text name="md_developer">
		<pos>0.18 0.7</pos>
		<size>0 0.033</size>
	</text>
	<text name="md_lbl_players">
		<pos>0.37 0.64</pos>
		<size>0.09 0</size>
	</text>
	<text name="md_players">
		<pos>0.45 0.64</pos>
		<size>0.02 0</size>
	</text>
	<text name="md_description">
		<color>ffffff</color>
		<forceUppercase>0</forceUppercase>
		<fontPath>./_dades/lletra/mask.ttf</fontPath>
		<fontSize>0.023</fontSize>
		<pos>0.07 0.74</pos>
		<size>0.467 0.14</size>
	</text>
</view>
<view name="basic, detailed, grid">
	<image name="md_image">
		<origin>0.5 0.5</origin>
		<pos>0.296 0.348</pos>
		<size>0.294 0.278</size>
	</image>
</view>
<feature supported="video">
	<view name="video">
		<video name="md_video">
			<origin>0.5 0.5</origin>
			<pos>0.296 0.348</pos>
			<maxSize>0.294 0.278</maxSize>
			<delay>0.5</delay>
			<default>./_dades/video/static.mp4</default>
			<showSnapshotNoVideo>false</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
		</video>
	</view>
</feature>
<feature supported="z-index">
	<view name="detailed,video">
		<image name="background" extra="true">
			<zIndex>0</zIndex>
        </image>
		<image name="md_image">
			<zIndex>10</zIndex>
        </image>
        <video name="md_video">
			<zIndex>10</zIndex>
        </video>
	</view>
</feature>
</theme>